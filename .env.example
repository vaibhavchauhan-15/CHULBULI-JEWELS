# Database Configuration
# PostgreSQL connection string with connection pooling for Vercel serverless
# CRITICAL PARAMETERS for serverless:
#   - statement_cache_size=0  (REQUIRED: Disables prepared statements to prevent conflicts)
#   - connection_limit=1       (One connection per serverless function)
#   - pgbouncer=true          (Transaction pooling mode - if using PgBouncer)
#   - pool_timeout=0          (No connection timeout)

# For Supabase (Transaction Pooling - Port 6543):
DATABASE_URL="postgresql://postgres.xxxxx:password@aws-0-region.pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=1&pool_timeout=0&statement_cache_size=0"

# For Neon (Pooled Connection):
# DATABASE_URL="postgresql://user:password@ep-xxx-pooler.region.aws.neon.tech:5432/neondb?sslmode=require&connection_limit=1&pool_timeout=0&statement_cache_size=0"

# For Standard PostgreSQL (No PgBouncer):
# DATABASE_URL="postgresql://user:password@host:5432/database?connection_limit=1&pool_timeout=0&statement_cache_size=0&connect_timeout=10"

# Direct URL for migrations (use port 5432, no pgbouncer)
DIRECT_URL="postgresql://user:password@host:5432/database"

# JWT Secret (CRITICAL: Generate a secure 256-bit secret)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# MUST BE AT LEAST 32 CHARACTERS (256 bits)
JWT_SECRET="REPLACE_WITH_SECURE_64_CHARACTER_HEX_STRING_GENERATED_ABOVE"

# Cloudinary Configuration (Image Storage)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Node Environment
NODE_ENV="development"

# Security Notes:
# 1. NEVER commit the actual .env file to version control
# 2. Generate a new JWT_SECRET for each environment (dev, staging, prod)
# 3. JWT_SECRET should be different in development and production
# 4. Keep all secrets secure and rotate them periodically
# 5. Use different credentials for development and production databases
